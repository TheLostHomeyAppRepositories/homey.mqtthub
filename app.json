{
  "id": "org.mqtt.hub",
  "version": "4.3.0",
  "compatibility": ">=12.2.0",
  "sdk": 3,
  "brandColor": "#103b7a",
  "name": {
    "en": "MQTT Hub",
    "nl": "MQTT Hub"
  },
  "description": {
    "en": "Turn your Homey into a HUB and let external applications discover & control all your connected devices.",
    "nl": "Maak van je Homey een HUB. Geef externe applicaties de mogelijkheid om al je apparaten te vinden en er mee te communiceren."
  },
  "category": [
    "tools",
    "internet"
  ],
  "tags": {
    "en": [
      "MQTT",
      "HUB",
      "gateway",
      "bridge",
      "discovery",
      "Home Assistant",
      "HA"
    ]
  },
  "permissions": [
    "homey:manager:api",
    "homey:app:nl.scanno.mqtt"
  ],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Ronny Winkler",
    "email": "ronny.winkler@web.de"
  },
  "contributors": {
    "developers": [
      {
        "name": "Ronny Winkler",
        "email": "ronny.winkler@web.de"
      },
      {
        "name": "Harrie de Groot",
        "email": "harriedegroot@gmail.com"
      },
      {
        "name": "Menno van Grinsven",
        "email": "mgrinsven@gmail.com"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "winklerronny"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/RonnyWinkler/homey.mqtthub/issues"
  },
  "homeyCommunityTopicId": 113463,
  "api": {
    "getDevices": {
      "method": "get",
      "path": "/devices",
      "public": false
    },
    "getZones": {
      "method": "get",
      "path": "/zones",
      "public": false
    },
    "getRunning": {
      "method": "get",
      "path": "/running",
      "public": true
    },
    "setRunning": {
      "method": "post",
      "path": "/running",
      "public": false
    },
    "refresh": {
      "method": "get",
      "path": "/refresh",
      "public": false
    },
    "restart": {
      "method": "get",
      "path": "/restart",
      "public": false
    },
    "getSettingsChanged": {
      "method": "get",
      "path": "/settings_changed",
      "public": false
    },
    "getLog": {
      "method": "get",
      "path": "/log",
      "public": false
    },
    "getLogLevel": {
      "method": "get",
      "path": "/loglevel",
      "public": false
    },
    "setLogLevel": {
      "method": "post",
      "path": "/loglevel",
      "public": false
    },
    "getState": {
      "method": "get",
      "path": "/state",
      "public": false
    }
  },
  "drivers": [
    {
      "id": "device",
      "name": {
        "en": "MQTT Device",
        "nl": "MQTT Apparaat"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "images": {
        "large": "/drivers/device/assets/images/large.png",
        "small": "/drivers/device/assets/images/small.png"
      },
      "pair": [
        {
          "id": "device",
          "navigation": {
            "next": "icon"
          }
        },
        {
          "id": "icon",
          "navigation": {
            "prev": "device",
            "next": "capabilities"
          }
        },
        {
          "id": "capabilities",
          "navigation": {
            "prev": "icon",
            "next": "done"
          }
        },
        {
          "id": "capability",
          "navigation": {
            "next": "capabilities"
          }
        },
        {
          "id": "done"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General"
          },
          "children": [
            {
              "id": "onOffValues",
              "type": "radio",
              "label": {
                "en": "On/Off values"
              },
              "value": "bool",
              "values": [
                {
                  "id": "bool",
                  "label": {
                    "en": "true/false"
                  }
                },
                {
                  "id": "int",
                  "label": {
                    "en": "1/0"
                  }
                },
                {
                  "id": "onoff",
                  "label": {
                    "en": "on/off"
                  }
                },
                {
                  "id": "yesno",
                  "label": {
                    "en": "yes/no"
                  }
                }
              ],
              "hint": {
                "en": "By default Homey uses the values 'true' and 'false' for the onoff capability. Choose different values when needed."
              }
            },
            {
              "id": "percentageScale",
              "type": "radio",
              "label": {
                "en": "Percentage scaling"
              },
              "value": "int",
              "values": [
                {
                  "id": "default",
                  "label": {
                    "en": "default (original value)"
                  }
                },
                {
                  "id": "int",
                  "label": {
                    "en": "int (0...100)"
                  }
                },
                {
                  "id": "float",
                  "label": {
                    "en": "float (0...1)"
                  }
                }
              ],
              "hint": {
                "en": "By default all Homey values are represented as a floating point value between 0 and 1. Most other applications use an integer representation of 0 - 100 for percentages and cannot handle floating point percentages. To overcome this, all percentages are scaled between 0 and 100 by default; change when needed."
              }
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Advanced"
          },
          "children": [
            {
              "id": "topics",
              "type": "textarea",
              "label": {
                "en": "Topics"
              },
              "value": "",
              "hint": {
                "en": "WARNING: Messing up the topic config will break the device!"
              }
            }
          ]
        },
        {
          "type": "group",
          "label": { 
              "en": "Energy"
          },
          "children": 
          [
              {
                  "id": "set_energy_cumulative",
                  "type": "checkbox",
                  "value": false,
                  "label": {
                      "en": "Cumulative energy measuring"
                  },
                  "hint": {
                      "en": "Enable this setting if the device is measuring the cumulative energy usage."
                  }
              },
              {
                  "id": "energy_cumulative_include",
                  "type": "checkbox",
                  "value": false,
                  "label": {
                      "en": "Include in total energy"
                  }
              },
              {
                  "id": "set_energy_home_battery",
                  "type": "checkbox",
                  "value": false,
                  "label": {
                      "en": "Home Battery"
                  },
                  "hint": {
                      "en": "Define a device with class=battery having a measure_power capability as home battery. Provide positive values to indicate the battery is consuming energy (charging), provide negative values to indicate the battery is delivering energy back to the home (discharging)"
                  }
              }
          ]
        }
      ]
    },
    {
      "id": "homie",
      "name": {
        "en": "Homie Discovery",
        "nl": "Homie Discovery"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "images": {
        "large": "/drivers/homie/assets/images/large.png",
        "small": "/drivers/homie/assets/images/small.png"
      },
      "pair": [
        {
          "id": "topic"
        },
        {
          "id": "discover"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": { 
              "en": "Energy"
          },
          "children": 
          [
              {
                  "id": "set_energy_cumulative",
                  "type": "checkbox",
                  "value": false,
                  "label": {
                      "en": "Cumulative energy measuring"
                  },
                  "hint": {
                      "en": "Enable this setting if the device is measuring the cumulative energy usage."
                  }
              },
              {
                  "id": "energy_cumulative_include",
                  "type": "checkbox",
                  "value": false,
                  "label": {
                      "en": "Include in total energy"
                  }
              },
              {
                  "id": "set_energy_home_battery",
                  "type": "checkbox",
                  "value": false,
                  "label": {
                      "en": "Home Battery"
                  },
                  "hint": {
                      "en": "Define a device with class=battery having a measure_power capability as home battery. Provide positive values to indicate the battery is consuming energy (charging), provide negative values to indicate the battery is delivering energy back to the home (discharging)"
                  }
              }
          ]
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "device_changed",
        "title": {
          "en": "An MQTT device changed",
          "nl": "Een MQTT apparaat is veranderd"
        },
        "tokens": [
          {
            "name": "value",
            "type": "string",
            "title": {
              "en": "value",
              "nl": "waarde"
            },
            "example": {
              "en": "true",
              "nl": "true"
            }
          },
          {
            "name": "Capability",
            "type": "string",
            "title": {
              "en": "capability",
              "nl": "functionaliteit"
            },
            "example": {
              "en": "onoff",
              "nl": "aanuit"
            }
          },
          {
            "name": "device",
            "type": "string",
            "title": {
              "en": "device",
              "nl": "apparaat"
            },
            "example": {
              "en": "MQTT Lamp",
              "nl": "MQTT Lamp"
            }
          }
        ]
      },
      {
        "id": "change",
        "title": {
          "en": "Value changed",
          "nl": "Waarde is veranderd"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=device"
          }
        ]
      },
      {
        "id": "app_cpuwarn",
        "title": {
          "en": "CPU warning",
          "nl": "CPU waarschuwing"
        },
        "titleFormatted": {
          "en": "A CPU warning has occurred",
          "nl": "Er is een CPU waarschuwing opgetreden"
        },
        "hint": {
          "en": "Triggers when the app is consuming too much CPU time.",
          "nl": "Wordt geactiveerd wanneer de app te veel CPU-tijd verbruikt."
        },
        "tokens": [
          {
            "name": "count",
            "type": "number",
            "example": 5,
            "title": {
                "en": "Number of warnings sent",
                "nl": "Aantal verzonden waarschuwingen"
            }
          },
          {
            "name": "limit",
            "type": "number",
            "example": 25,
            "title": {
                "en": "Number of maximum warnings until the app is killed",
                "nl": "Aantal maximale waarschuwingen totdat de app wordt uitgeschakeld"
            }
          }
        ]
      },
      {
        "id": "app_memwarn",
        "title": {
          "en": "Memory warning",
          "nl": "Geheugen waarschuwing"
        },
        "titleFormatted": {
          "en": "A memory warning has occurred",
          "nl": "Er is een geheugenwaarschuwing opgetreden"
        },
        "hint": {
          "en": "Triggers when the app is consuming too much memory.",
          "nl": "Wordt geactiveerd wanneer de app te veel geheugen verbruikt."
        },
        "tokens": [
          {
            "name": "count",
            "type": "number",
            "example": 5,
            "title": {
              "en": "Number of warnings sent",
              "nl": "Aantal verzonden waarschuwingen"
            }
          },
          {
            "name": "limit",
            "type": "number",
            "example": 25,
            "title": {
              "en": "Number of maximum warnings until the app is killed",
              "nl": "Aantal maximale waarschuwingen totdat de app wordt uitgeschakeld"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "broadcast",
        "title": {
          "en": "Trigger broadcast",
          "nl": "Broadcast uitvoeren"
        }
      },
      {
        "id": "start_hub",
        "title": {
          "en": "Start Hub sync and broadcast",
          "nl": "Start Hub sync en broadcasts"
        }
      },
      {
        "id": "set_value",
        "title": {
          "en": "Set a capability value",
          "nl": "Zet de waarde van een functionaliteit"
        },
        "titleFormatted": {
          "en": "Set value of capability [[capability]] to [[value]]",
          "nl": "Zet waarde van functionaliteit [[capability]] op [[value]]"
        },
        "args": [
          {
            "name": "capability",
            "type": "text",
            "placeholder": {
              "en": "Capability",
              "nl": "Functionaliteit"
            }
          },
          {
            "name": "value",
            "type": "text",
            "placeholder": {
              "en": "Value",
              "nl": "Waarde"
            }
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=device"
          }
        ]
      }
    ]
  }
}